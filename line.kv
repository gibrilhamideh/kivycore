
<GlowButton@Button>:
    size_hint: None, None
    size: dp(75), dp(30)
    background_normal: ''
    color: 0, 0, 0, 1
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            size: self.size
            pos: self.pos


        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Line:
            width: dp(1)
            rounded_rectangle: self.x, self.y, self.width, self.height, dp(10)

RelativeLayout:
    LineSplitTextureWidget:
        id: line

    LineSplitTextureWidget:
        color: [1, 0, 0, 1]
        points: 
            [ \
            [0.0, 0.5], \
            [0.2, 0.8], \
            [0.5, 0.3], \
            [0.9, 0.7], \
            [1.0, 0.1] \
            ]

    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        size: self.minimum_size
        pos_hint: {'x': 0.0,'top': 1.0}
        spacing: dp(10)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: self.minimum_size

            GlowButton:
                text: 'spread +'
                on_release: line.spread += 25

            GlowButton: 
                text: 'spread -'
                on_release: line.spread -= 25

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: self.minimum_size

            GlowButton:
                text: 'blur +'
                on_release: line.blur += 0.2

            GlowButton:
                text: 'blur -'
                on_release: line.blur -= 0.2

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: self.minimum_size

            GlowButton:
                text: 'strength +'
                on_release: line.strength += 0.2

            GlowButton:
                text: 'strength -'
                on_release: line.strength -= 0.2