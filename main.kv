#:import RelativeLayout kivy.uix.relativelayout.RelativeLayout

BoxLayout:
    orientation: 'horizontal'
    padding: dp(25)
    spacing: dp(25)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size


    RelativeLayout:
        LineChart:
            id: graph
            radius: dp(10)
            elevation: 2
            shadow_offset: 0, -5
            shadow_color: 0, 0, 0, 0.5
            background_color: 1, 1, 1, 1

    Card:
        size_hint_x: None
        width: dp(250)
        orientation: 'vertical'

        radius: dp(10)
        elevation: 2
        shadow_offset: 0, -5
        shadow_color: 0, 0, 0, 0.5
        background_color: 1, 1, 1, 1

        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: dp(10)
                spacing: dp(10)

                ElevatedButton:
                    text: 'Move Cursor Right'
                    on_release: graph.move_cursor_right()
                    pos_hint: {'center_x': 0.5}

                ElevatedButton:
                    text: 'Move Cursor Left'
                    on_release: graph.move_cursor_left()
                    pos_hint: {'center_x': 0.5}

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: dp(10)
                    size_hint_y: None
                    height: dp(50)

                    Label:
                        color: 0, 0, 0, 1
                        text: 'Cursor X:'
                        size_hint_x: None
                        width: dp(100)

                    CoreSwitch:
                        pos_hint: {'center_y': 0.5}

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: dp(10)
                    size_hint_y: None
                    height: dp(50)

                    Label:
                        color: 0, 0, 0, 1
                        text: 'Cursor Y:'
                        size_hint_x: None
                        width: dp(100)

                    CoreSwitch:
                        pos_hint: {'center_y': 0.5}
